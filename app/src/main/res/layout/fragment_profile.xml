<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/profileTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/quantum_amber500"
        app:tabIndicatorColor="@color/fui_bgGoogle">

        <android.support.design.widget.TabItem
            android:id="@+id/profTab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Profile" />

        <android.support.design.widget.TabItem
            android:id="@+id/musicList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="My Music" />

        <android.support.design.widget.TabItem
            android:id="@+id/spotifyTab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Recent Listens" />

        <android.support.design.widget.TabItem
            android:id="@+id/videoTab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Videos" />

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profileViewPager"></android.support.v4.view.ViewPager>


</LinearLayout>

